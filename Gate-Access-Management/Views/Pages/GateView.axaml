<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Gate_Access_Management.ViewModels.Pages"
             x:Class="Gate_Access_Management.Views.Pages.GateView"
             x:DataType="vm:GateViewModel">

    <Grid RowDefinitions="Auto,*" Margin="20">

        <!-- HEADER BAR -->
        <Grid Grid.Row="0"
              ColumnDefinitions="*,*,*"
              VerticalAlignment="Center"
              Margin="0,0,0,16">

            <!-- LEFT SLOT -->
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        Spacing="10"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
            </StackPanel>

            <!-- CENTER TITLE -->
            <TextBlock Grid.Column="1"
                       Text="Gate"
                       FontSize="56"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />

            <!-- RIGHT SLOT -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        Spacing="10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">

            </StackPanel>

        </Grid>

        <!-- MAIN CONTENT -->
        <Border Grid.Row="1"
                Background="#141414"
                BorderBrush="#E6E6E6"
                BorderThickness="2"
                CornerRadius="14"
                Padding="24">

            <Grid ColumnDefinitions="*,*" ColumnSpacing="28">

                <!-- ENTER Column -->
                <StackPanel Grid.Column="0" Spacing="14">
                    <TextBlock Text="Entry Gate" FontSize="34" FontWeight="SemiBold" HorizontalAlignment="Center" />

                    <StackPanel Spacing="12" Margin="0,8,0,0">
                        <Button Classes="GateButton"
                                Content="Open"
                                HorizontalAlignment="Center"
                                Command="{Binding OpenEntryGateCommand}" />

                        <Button Classes="GateButton"
                                Content="Close"
                                HorizontalAlignment="Center"
                                Command="{Binding CloseEntryGateCommand}" />

                        <Button Classes="GateButton"
                                Content="Hold Open"
                                HorizontalAlignment="Center"
                                Command="{Binding HoldOpenEntryGateCommand}" />
                    </StackPanel>
                </StackPanel>

                <!-- EXIT Column -->
                <StackPanel Grid.Column="1" Spacing="14">
                    <TextBlock Text="Exit Gate" FontSize="34" FontWeight="SemiBold" HorizontalAlignment="Center" />

                    <StackPanel Spacing="12" Margin="0,8,0,0">
                        <Button Classes="GateButton"
                                Content="Open"
                                HorizontalAlignment="Center"
                                Command="{Binding OpenExitGateCommand}" />

                        <Button Classes="GateButton"
                                Content="Close"
                                HorizontalAlignment="Center"
                                Command="{Binding CloseExitGateCommand}" />

                        <Button Classes="GateButton"
                                Content="Hold Open"
                                HorizontalAlignment="Center"
                                Command="{Binding HoldOpenExitGateCommand}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>